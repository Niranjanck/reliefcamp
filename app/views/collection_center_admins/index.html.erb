<p id="notice"><%= notice %></p>
<div id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Collection Center Admins<span class="float-right" ><%= link_to new_collection_center_admin_path do %> <i class="fas fa-plus"></i> Add New<% end %>
  </span></h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                  <tr>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Collection center</th>
                    <th>Actions</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @collection_center_admins.each do |collection_center_admin| %>
                      <tr>
                        <td><%= collection_center_admin.email %></td>
                        <td><%= collection_center_admin.phone %></td>
                        <td><%= collection_center_admin.collection_center.center_name %></td>
                        <td><%= link_to collection_center_admin do%><i class="fas fa-eye" aria-hidden="true"></i><% end %>
                          <%= link_to edit_collection_center_admin_path(collection_center_admin) do%><i class="far fa-edit" aria-hidden="true"></i><% end %>
                          <%= link_to collection_center_admin, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fas fa-trash" aria-hidden="true"></i><% end %>
                        </td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>


              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->



</div>
