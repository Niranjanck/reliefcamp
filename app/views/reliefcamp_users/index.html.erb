<p id="notice"><%= notice %></p>
<div id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">


          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <%if relief_camp_admin_signed_in?%>
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Camp Members<span class="float-right" ><%= link_to new_reliefcamp_user_path do %> <i class="fas fa-plus"></i> Add New<% end %>
            </span></h6>
            </div>
            <% end %>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Relief Camp</th>
      <%if relief_camp_admin_signed_in?%>
      <th>Actions</th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @reliefcamp_users.each do |reliefcamp_user| %>
      <tr>
        <td><%= reliefcamp_user.name %></td>
        <td><%= reliefcamp_user.age %></td>
        <td><%= reliefcamp_user.address %></td>
        <td><%= reliefcamp_user.gender %></td>
        <td><%= reliefcamp_user.phone %></td>
        <td><%= link_to reliefcamp_user.relief_camp.camp_name %></td>
        <%if relief_camp_admin_signed_in?%>
            <td><%= link_to reliefcamp_user do%><i class="fas fa-eye" aria-hidden="true"></i><% end %>
              <%= link_to edit_reliefcamp_user_path(reliefcamp_user) do%><i class="far fa-edit" aria-hidden="true"></i><% end %>
              <%= link_to reliefcamp_user, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fas fa-trash" aria-hidden="true"></i><% end %>
            </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->


</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->



</div>
