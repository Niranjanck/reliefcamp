<p id="notice"><%= notice %></p>
<div id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- DataTales Example -->
          <div class="card shadow mb-4 col-md-6 offset-md-3">
            <div class="card-body">
              <p>
                <strong>Items:</strong>
                <%= @camp_request.item.name %>
              </p>

              <p>
                <strong>Quantity:</strong>
                <%= @camp_request.quantity %>
              </p>
              <p>
                <strong>Relief camps:</strong>
                <%= @camp_request.relief_camp.camp_name %>
              </p>
              <% if @camp_request.collection_center.present? %>
                  <p>
                    <strong>Collection centers:</strong>
                    <%= @camp_request.collection_center.center_name %>
                  </p>
              <% end %>
              <p>
                <strong>Status:</strong>
                <%= @camp_request.status %>
              </p>

            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->



</div>

