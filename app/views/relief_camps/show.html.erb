<div id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <div class="container-fluid">
          <div class="col-md-6">
            <div class="card shadow mb-4" style="height: 300px;">
              <div class="card-body">
                <div class="table-responsive">
                  <p>
                    <strong>Campname:</strong>
                    <%= @relief_camp.camp_name %>
                  </p>

                  <p>
                    <strong>Description:</strong>
                    <%= @relief_camp.description %>
                  </p>

                  <p>
                    <strong>Address:</strong>
                    <%= @relief_camp.address %>
                  </p>


                  <p>
                    <strong>Phone:</strong>
                    <%= @relief_camp.phone %>
                  </p>
                  <p>
                    <strong>Users:</strong>
                    <%= @relief_camp.reliefcamp_users.count %>
                    <%= link_to 'View', reliefcamp_users_path(camp_id: @relief_camp.id)  %>
                  </p>
                  <a href="http://localhost:3000/relief_camps" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> OK</a><br>

                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6 noPadding">
            <iframe
            width="100%"
            height="300"
            frameborder="0"
            style="border:0"
            src="https://www.google.com/maps/embed/v1/search?key=AIzaSyBA0710dH0YJyw4Rb_Me-GcfOuJAQDfw3c&q=<%= @relief_camp.latitude %>,<%= @relief_camp.longitude %>&zoom=18" width="" height=""></iframe>
          </div>


        </div>
      </div>
    </div>



  </div>
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
</div>
