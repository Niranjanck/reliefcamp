


<p id="notice"><%= notice %></p>
<div id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- DataTales Example -->
          <div class="card shadow mb-4 col-md-6 offset-md-3">
            <div class="card-body">
              <p>
                <strong>Title:</strong>
                <%= @notification.title %>
              </p>

              <p>
                <strong>Description:</strong>
                <%= @notification.description %>
              </p>
              <p>
                <strong>Likes:</strong>
                <%= @notification.like_comments.likes.count %><i style="margin-left: 5px;" class="fas fa-thumbs-up"></i>
              </p>
              <p>
                <strong>Dislikes:</strong>
                <%= @notification.like_comments.dislikes.count %><i style="margin-left: 5px;" class="far fa-thumbs-down"></i>
              </p>
              <strong>Comments:</strong>
              <% @notification.like_comments.each do |com| %>
                  <p>

                    <%= com.comment %>
                  </p>
              <% end %>


              <% if user_signed_in? && LikeComment.where(parent: current_user,notification_id: @notification.id).blank? %>

                  <p>
                    <a href = "<%= new_like_comment_path(iid: @notification.id)%>">Add comments</a>
                  </p>
              <% end %>
              <br><br>
              <a href="http://localhost:3000/notifications" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> OK</a><br>

            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->



</div>
